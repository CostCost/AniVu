<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.AniVu" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="materialAlertDialogTheme">@style/AniVuMaterialAlertDialog</item>
    </style>

    <style name="Theme.AniVu" parent="Base.Theme.AniVu" />

    <style name="AniVuMaterialAlertDialog" parent="@style/ThemeOverlay.Material3.MaterialAlertDialog.Centered">
        <item name="materialAlertDialogTitleIconStyle">@style/DialogIconTint</item>
    </style>

    <style name="DialogIconTint" parent="@style/MaterialAlertDialog.Material3.Title.Icon.CenterStacked">
        <item name="android:tint">?attr/colorSecondary</item>
    </style>

    <style name="Theme.AniVu.Player" parent="Base.Theme.AniVu">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
</resources>