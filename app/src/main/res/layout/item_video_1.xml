<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?selectableItemBackground"
    android:paddingHorizontal="16dp"
    android:paddingVertical="16dp">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_video_1_title"
        style="?attr/textAppearanceTitleMedium"
        android:layout_width="0px"
        android:layout_height="wrap_content"
        android:maxLines="3"
        app:layout_constraintEnd_toStartOf="@id/btn_video_1_play"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="title" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_video_1_size"
        style="?attr/textAppearanceLabelLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:maxLines="3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_video_1_title"
        tools:text="10 MB" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_video_1_date"
        style="?attr/textAppearanceLabelLarge"
        android:layout_width="0px"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="6dp"
        android:maxLines="3"
        app:layout_constraintEnd_toEndOf="@id/tv_video_1_title"
        app:layout_constraintStart_toEndOf="@id/tv_video_1_size"
        app:layout_constraintTop_toBottomOf="@id/tv_video_1_title"
        tools:text="2024年2月6日" />

    <Button
        android:id="@+id/btn_video_1_play"
        style="?attr/materialIconButtonFilledStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        app:icon="@drawable/ic_play_arrow_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_video_1_title"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>